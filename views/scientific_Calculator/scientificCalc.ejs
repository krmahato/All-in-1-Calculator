<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scientific Calculator</title>
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

    <!-----bootstrap and css import-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
 
    <script src="https://kit.fontawesome.com/5c2baa997c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="scientific_Calculator/scientific.css">


</head>

<body>
    
    <%- include('../partials/header') %>
    
    <div class="container">
        <div class="heading">
            <h2 class="heading-text">Scientific Calculator</h2>
        </div>
        <form name="cal">
            <input type="text" name="text" id="screen" class="screen" readonly>
        </form>
        <div class="btns">
            <button  onclick="document.cal.text.value=Math.sin(document.cal.text.value)">Sin</button>
            <button onclick="document.cal.text.value=Math.cos(document.cal.text.value)">Cos</button>
            <button onclick="document.cal.text.value=Math.tan(document.cal.text.value)">Tan</button>
            <button onclick="document.cal.text.value=Math.log(document.cal.text.value)">Log</button>

            <button onclick="document.cal.text.value=Math.pow(document.cal.text.value,2)">x<sup>2</sup></button>
            <button onclick="document.cal.text.value=Math.pow(document.cal.text.value,3)">x<sup>3</sup></button>
            <button onclick="document.cal.text.value=Math.sqrt(document.cal.text.value, 1/2)">&radic;</button>
            <button onclick="document.cal.text.value=Math.sqrt(document.cal.text.value, 1/3)">&#8731;</button>

            <button onclick="document.cal.text.value+= '1'">1</button>
            <button onclick="document.cal.text.value+= '2'">2</button>
            <button onclick="document.cal.text.value+= '3'">3</button>
            <button onclick="document.cal.text.value+= '4'">4</button>

            <button onclick="document.cal.text.value+= '5'">5</button>
            <button onclick="document.cal.text.value+= '6'">6</button>
            <button onclick="document.cal.text.value+= '7'">7</button>
            <button onclick="document.cal.text.value+= '8'">8</button>

            <button onclick="document.cal.text.value+= '9'">9</button>
            <button onclick="document.cal.text.value+= '0'">0</button>
            <button onclick="document.cal.text.value+= '.'">.</button>
            <button onclick="document.cal.text.value+= '*'">*</button>

            <button onclick="document.cal.text.value+= '+'">+</button>
            <button onclick="document.cal.text.value+= '-'">-</button>
            <button onclick="document.cal.text.value+= '/'">/</button>
            <button onclick="document.cal.text.value+= '%'">%</button>

            <button onclick="del()" class="reset3">DEL</button>
            <button onclick="document.cal.text.value = ''"  class="reset2">C</button>
            <button onclick="document.cal.text.value = eval(document.cal.text.value)" class="reset1" >=</button>
        </div>
    </div>

<%- include('../partials/footer') %>

</body>
<script type="text/javascript">
    function del(){
        var x = document.getElementById('screen').value;
        document.getElementById('screen').value = x.substr(0,x.length-1);
    }
    
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<script src="main.js"></script>

</html>