                    <label class="form-label " for="bmi_res"><strong>BMI:</strong></label>
                    <input class="center" id="bmi_res" type="number" readonly name="bmi_res" placeholder="">
                    <div>
                        <img id="status_img" class="img_status" src="\images\bmi.jpg" alt="BMI Status" width="360px"
                            length="360px">
                    </div>
                    <h4 id="status" class="center status">BMI Status</h4>
                </div>
