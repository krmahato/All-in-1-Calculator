<body>
    <%- include('../partials/header') %>
    <%- include('../partials/gemoetry-calc-list') %>



<!------------------------------- Isosceles ---------------------------->

<div id="iso-triangle" class="calc">
    <h3>Isosceles Triangle Calculator</h3>
    <div class="cont">
        <div class="inputs">
            <label for="">side a=</label>
            <input type="text" name="IsoSideA" id="ISO_a" class="input-bar" title="positive real number"
                placeholder="Length of side a">
            <br><br>
            <label for="">side b=</label>
            <input type="text" name="IsoSideB" id="ISO_b" class="input-bar" title="positive real number"
                placeholder="Length of side b">
            <div class="input-for-units">
                <label for="units_length">Length Units</label>
                <select name="units" id="unitsISO">
                    <option value="km">km</option>
                    <option value="m" selected>m</option>
                    <option value="cm">cm</option>
                    <option value="mm">mm</option>
                    <option value="mi">mi</option>
                    <option value="yd">yd</option>
                    <option value="ft">ft</option>
                    <option value="in">in</option>
                </select>

                <div class="buttons">
                    <button id="resetISO" class="btn btn-outline-dark">Reset</button>
                    <button id="submitISO" class="btn btn-outline-dark">Calculate</button>
                </div>

            </div>
        </div>

        <div class="display">
            Answer:
            <div id="answerISO"></div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

</body>
